<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Part 1 Header -->

    <RelativeLayout
        android:id="@+id/personalHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/ic_header1_bg"  >

        <Button
            android:id="@+id/btn_personal_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
         android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_menu_back" />

        <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="15dp"
            android:paddingLeft="45dp"
            android:paddingTop="20dp"
            android:text="基本信息"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personalContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personalHeader"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_personal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="30dp"
            android:text="学号" />

        <TextView
            android:id="@+id/tv_personal_sno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_number"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="2010114062" />

        <TextView
            android:id="@+id/tv_personal_line2"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_sno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personal_line2"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_personal_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_name"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="朱宁娟" />

        <TextView
            android:id="@+id/tv_personal_line3"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_sname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_personal_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personal_line3"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="学院" />

        <TextView
            android:id="@+id/tv_personal_sschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_school"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="信息管理与工程" />

        <TextView
            android:id="@+id/tv_personal_line4"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_sschool"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_personal_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personal_line4"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="专业" />

        <TextView
            android:id="@+id/tv_personal_smajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_major"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="信息管理与信息系统" />

        <TextView
            android:id="@+id/tv_personal_line5"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_smajor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/gray" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personalPho"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personalContent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_personal_pho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="手机号" />

        <Button
            android:id="@+id/btn_personal_edtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_personal_pho"
            android:background="@drawable/ic_personal_edtp" />

        <TextView
            android:id="@+id/tv_personal_spho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_pho"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="15201999122" />

        <TextView
            android:id="@+id/tv_personal_line6"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_pho"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_personal_eml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personal_line6"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="邮箱" />

        <Button
            android:id="@+id/btn_personal_edte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personal_line6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/tv_personal_pho"
            android:background="@drawable/ic_personal_edtp" />

        <TextView
            android:id="@+id/tv_personal_seml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_personal_eml"
            android:layout_alignParentRight="true"
            android:paddingRight="25dp"
            android:text="446572759@qq.com" />

        <TextView
            android:id="@+id/tv_personal_line7"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_personal_seml"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/personalButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/personalPho"
        android:background="@color/white" 
        android:orientation="vertical">
        <Button 
            android:id="@+id/btn_personal_logoff"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:text="注销"
            android:textSize="15sp"
            />
          <Button 
            android:id="@+id/btn_personal_exit"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:background="@color/gold"
            android:text="退出"
            android:textSize="15sp"
            />
    </LinearLayout>

</RelativeLayout>