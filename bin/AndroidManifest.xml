        <activity
            android:name="com.sufe.lecture.activity.CommentActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sufe.lecture.activity.AlarmAlertActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sufe.lecture.activity.AlertActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sufe.lecture.activity.PersonalActivity"
            android:screenOrientation="portrait" >
        </activity>
       <receiver android:name="com.sufe.receiver.CallAlertReceiver"
            android:process=":remote"></receiver>
    </application>

</manifest>